import { Button, VerticalBox, HorizontalBox, ScrollView, HorizontalBox } from "std-widgets.slint";
import "./fonts/NotoColorEmoji-Regular.ttf";

global RegionHelper {
    public pure function get-emoji(region: string) -> string {
        if (region == "USA") {
            return "üá∫üá∏";
        }
        if (region == "KOR") {
            return "üá∞üá∑"; 
        }
        if (region == "RUS") {
            return "üá∑üá∫";
        }
        return "üåç";
    }
}

export struct SlintCusFile {
    path: string,
    region: string,
    modified: bool,
    invalid: bool,
    data_size: int}

export global GlobalVariables {
    in property <string> local_region;
    in-out property <[SlintCusFile]> files;
}

component RegionButton inherits Rectangle {
    in-out property <bool> toggled;

    in property <string> region_emoji;
    in property <string> region_name;

    property <int> name;
    property <color> normal-color: #2a2730;
    property <color> hover-color: #4a4458;
    property <color> pressed-color: #1a1620;
    property <color> toggled-color: #6d4c7d;

    property <length> default_padding: 20px;
    property <length> default_font_size: 18px;

    background: area.pressed ? pressed-color : toggled ? toggled-color : area.has-hover ? hover-color : normal-color;

    animate background { duration: 150ms; }

    border-radius: 2px;
    width: 100px;
    height: 36px;

    callback select;
    area := TouchArea {
        width: parent.width;
        height: parent.height;
        mouse-cursor: pointer;
        clicked => {
            root.select();
        }
    }

    VerticalLayout {
        alignment: center;
        HorizontalBox {
            alignment: center;
            spacing: 2px;
            padding: 0px;

            Text {
                font-size: default_font_size - 2px;
                text: region_name;
            }

            Rectangle {
                width: 5px;
            }

            Text {
                font-family: "Noto Color Emoji";
                font-size: default_font_size;
                text: region_emoji;
            }
        }
    }
}

component RegionPanel inherits Rectangle {
    in-out property <string> selected_region;
    property <[string]> regions: ["USA", "KOR", "RUS"];

    HorizontalBox {
        spacing: 25px;

        for region in regions: RegionButton {
            region_name: region;
            region_emoji: RegionHelper.get-emoji(region);
            toggled: selected_region == region;
            select => {
                selected_region = region;
            }
        }
    }
}

component FileSlot inherits Rectangle {
    in-out property <SlintCusFile> file;
    in-out property <bool> converted: file.region == GlobalVariables.local_region;
    property <length> default_font_size: 18px;

    border-radius: 8px;
    width: 270px;
    height: 40px;
    background: converted ? #3B82F6EF : #EF4444EF;

    VerticalLayout {
        HorizontalBox {
            alignment: space-between;
            Text {
                vertical-alignment: center;
                text: file.path;
            }

            Text {
                vertical-alignment: center;
                font-family: "Noto Color Emoji";
                font-size: default_font_size;
                text: RegionHelper.get-emoji(file.region);
            }
        }
    }
}

component FilePanel {
    in-out property <int> viewport_height;

    VerticalLayout {
        ScrollView {
            // Absolute Width and Height of the actual view
            width: 300px;
            height: 200px;

            // How much we can scroll
            viewport-height: GlobalVariables.files.length * 50px;
            viewport-width: 300px;
            VerticalBox {
                FileSlot { converted: false;}
                FileSlot { converted: true;}

                for file[index] in GlobalVariables.files: FileSlot {
                    file: file;
                }
            }
        }
    }
}

component ConvertButton inherits Button {
    height: 50px;
    width: 100px;
    text: @tr("üõ†Ô∏è Convert");
}

component Background inherits Rectangle {
    Image {
        source: @image-url("./assets/Echidna-Photopead.jpg");
        image-fit: preserve;
    }
}

export component AppWindow inherits Window {
    width: 768px;
    height: 800px;
    title: @tr("Jarod's Lost Ark Preset Converter");

    callback request-increase-value();

    Background {
        VerticalLayout {
            spacing: 20px;
            alignment: center;
            HorizontalLayout {
                alignment: center;
                Text {
                    font-size: 24px;
                    font-weight: 600;
                    text: @tr("Your Local Region: ") + GlobalVariables.local_region;
                }
            }

            HorizontalLayout {
                alignment: center;
                FilePanel { }
            }

            HorizontalLayout {
                alignment: center;
                RegionPanel { }
            }

            HorizontalLayout {
                alignment: center;
                ConvertButton { }
            }
        }
    }
}
